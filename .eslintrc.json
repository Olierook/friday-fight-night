{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "next/core-web-vitals"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {

		"indent": [
			"error", 4
		],

		"react/jsx-indent": [
			"error", 4
		],

		"react/jsx-indent-props": [
			"error", 4
		],

        "linebreak-style": [
            "warn",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": "warn",
        "react/no-unknown-property": [
            2,
            {
                "ignore": [
                    "jsx", 
                    "global"
                ]
            }
        ],
        "react/react-in-jsx-scope": 0,
        "react/prop-types": 0,
        "react-hooks/exhaustive-deps": 0
    }
}
